<% price_types = [' 25 | By Weight', ' 50 | By Weight', ' 100 | By Weight', 'By Item'] %>

<div class="d-flex justify-content-center my-5">
  <%= form_for @dish do |f| %>
    <div class="my-2 d-flex">
      <%= f.label :name %>
      <span class="px-3"><%= f.text_field :name , class: 'form-control' %></span>
    </div>

    <div class="my-2 d-flex">
      <%= f.label :category_id %>
      <span class="px-3">
        <%= f.select :category_id, Category.all.map{|c| [c.name,c.id]}, class: 'form-control'%>
      </span>
    </div>
    <div class="my-2 d-flex">
      <%= f.label :price_type %>
      <span class="px-2"> <%= f.select :price_type, price_types, class: 'form-control' %></span>
    </div>
    <div class="mt-2 d-flex">
      <%= f.label :price %>
      <span class="px-4"><%= f.text_field :price , class: 'form-control' %></span>
    </div>
    <div class='my-3 text-center'><%= f.submit 'Save', class: 'btn btn-outline-secondary' %></div>
  <% end %>
</div>