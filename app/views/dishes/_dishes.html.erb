<% @dishes.each_with_index do |dish, index|%>

  <div class=' card flex-row justify-content-around p-2'>
    <div class="mx-2">
      <%=
        link_to dish.name,
        dish_path(dish.id),
        class: 'text-primary fw-bold card-title h5 mb-0 text-decoration-none'
      %>
    </div>
  </div>
<% end %>