<% @dishes.each do |dish|%>
  <div class=' card justify-content-center p-2' style="min-width: 25%">
    <div class="mx-2 text-center">
      <%=
        link_to dish.name,
        dish_path(dish.id),
        class: 'text-primary fw-bold card-title h5 mb-0 text-decoration-none '
      %>
    </div>
  </div>
<% end %>