<%= menu_form.fields_for :dish_menus do |dish_menus_form| %>
  <% @dishes.each do |dish| %>
    <div class="d-flex justify-content-between align-items-center my-1">
      <div class="mb-1 mx-2"><%= dish_menus_form.check_box :included %></div>
      <h5>  <%= dish.name %></h5>
      <div class="d-flex justify-content-end align-items-center ">
        <%= dish_menus_form.label :price, '$' %>
        <span class="mx-2">  <%= dish.price_type %></span>
        <%= dish_menus_form.text_field :price , value:dish.price, class:"form-control w-25 " %>
        <%= dish_menus_form.hidden_field :dish_id, value:dish.id%>
      </div>
    </div>
  <% end %>
<% end %>

<%#= render 'dishes_in_menu', model:@dishes %>