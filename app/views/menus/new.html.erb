<h1> new menu</h1>

<div class="card p-3 m-auto mt-5" style="width: 400px;">

  <%= form_for @menu do |f| %>
    <div>
      <h2><%= f.label :date %></h2>
      <%=f.date_select :date %>
    </div>

    <div class="mt-3 ">
     <h2> <%= f.label :dishes %></h2>
        <div class="card-body d-flex px-0">
          <% Dish.all.group_by{|d| d[:category_id] }.each do |key, val|  %>
           <div class="mx-2 mt-1">
             <b> <%= @categories.find(key).category %> </b>
             <%= f.collection_check_boxes :dishes, val, :id, :name  do |b| %>
               <div class="m-1">
                 <%= b.label class:"label-checkbox" do %>
                   <%= b.check_box + ' ' + b.text %>
                   </div>
                 <%end%>
             <% end %>
           </div>
          <% end %>
        </div>
    </div>
    <div class="text-center">
       <%= f.submit  class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
