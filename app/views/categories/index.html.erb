<div id="categories " class="card">
  <div class="card-header d-flex justify-content-center">
    <h2> Categories </h2>
    <%= link_to "âž•", new_category_path, class: 'text-decoration-none' %>
  </div>
  <div class="card-body d-flex justify-content-center">
    <% @categories.each do |category| %>
      <div class=" d-flex justify-content-between card w-25 p-1 m-1">
         <div class="fw-bold text-center mt-2">
            <%= category.name %>
         </div>
        <hr class="mx-5">
        <div class="d-flex justify-content-center">
          <%= button_to category, method: :delete, class:"btn px-3" do %>
            <i class="fa-solid fa-trash"></i>
          <%end %>
          <%= link_to  edit_category_path(category[:id]) , class:"btn px-3" do %>
            <i class="fa-solid fa-gear"></i>
          <%end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


